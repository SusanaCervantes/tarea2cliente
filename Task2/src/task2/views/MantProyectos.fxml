                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </JFXRadioButton>
                  <JFXRadioButton fx:id="rb_suspendido" prefHeight="30.0" text="Suspendido" toggleGroup="$tg_estado">
                     <VBox.margin>
