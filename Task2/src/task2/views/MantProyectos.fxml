                  <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
               </VBox.margin>
            </JFXDatePicker>
            <JFXDatePicker fx:id="dp_fechafinal" prefHeight="35.0" prefWidth="484.0" promptText="Fecha del Final del Proyecto">
