                  <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXDatePicker fx:id="dp_fechainicio" prefHeight="35.0" prefWidth="451.0" promptText="Fecha de Inicio el Proyecto">
