                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="tg_estado" />
                     </toggleGroup>
                  </JFXRadioButton>
                  <JFXRadioButton fx:id="rb_encurso" prefHeight="30.0" text="En Curso" toggleGroup="$tg_estado">
